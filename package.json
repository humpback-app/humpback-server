{
  "name": "humpback-server",
  "version": "0.0.1",
  "description": "server for managing music to play with humpback",
  "type": "module",
  "engines": {
    "node": ">=14.8"
  },
  "scripts": {
    "lint": "eslint .",
    "postlint": "tsc --noemit",
    "prebuild": "eslint .",
    "build": "tsc",
    "ts": "node --no-warnings --loader ts-node/esm",
    "mongo": "npx mongo-gui",
    "dev": "node --no-warnings --loader ts-node/esm src/server.ts",
    "pretest": "eslint .",
    "test": "c8 ava"
  },
  "repository": "https://github.com/d-fi/d-fi-core",
  "author": "Sayem Chowdhury",
  "license": "Apache-2.0",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "chalk": "^4.1.1",
    "dayjs": "^1.10.4",
    "fastify": "^3.15.1",
    "fastify-jwt": "^2.4.0",
    "got": "^11.8.2",
    "mongodb": "^4.0.0-beta.3",
    "music-metadata": "^7.8.5",
    "nanoid": "^3.1.22",
    "pino-pretty": "^4.7.1",
    "string-similarity": "^4.0.4"
  },
  "devDependencies": {
    "@types/bcrypt": "^3.0.1",
    "@types/json-schema": "^7.0.7",
    "@types/node": "^14.14.41",
    "@types/string-similarity": "^4.0.0",
    "@typescript-eslint/eslint-plugin": "^4.22.1",
    "@typescript-eslint/parser": "^4.22.1",
    "ava": "^3.15.0",
    "c8": "^7.7.2",
    "eslint": "^7.25.0",
    "eslint-plugin-prettier": "^3.4.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.2.1",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.4"
  },
  "ava": {
    "extensions": {
      "ts": "module"
    },
    "files": [
      "!dist"
    ],
    "environmentVariables": {
      "MONGODB_URI": "mongodb://localhost:27017/humpback_test_ava",
      "JWT_SECRET": "supersecret"
    },
    "nonSemVerExperiments": {
      "configurableModuleFormat": true
    },
    "nodeArguments": [
      "--no-warnings",
      "--loader=ts-node/esm"
    ],
    "concurrency": 1,
    "serial": true,
    "verbose": true
  }
}
